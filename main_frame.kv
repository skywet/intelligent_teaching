NavigationLayout:
    id: nav_layout
    MDNavigationDrawer:
        id: nav_drawer
        NavigationDrawerToolbar:
            title: 'Items'
        NavigationDrawerIconButton:
            icon: 'checkbox-blank-circle'
            text: 'Welcome'
            on_release: app.root.ids.scr_mngr.current = 'welcome'
        NavigationDrawerIconButton:
            icon: 'camera'
            text: 'Face Registration'
            on_release: app.root.ids.scr_mngr.current = 'regis'
        NavigationDrawerIconButton:
            icon: 'play'
            text: 'Random Selection'
            on_release: app.root.ids.scr_mngr.current = 'select'
        NavigationDrawerIconButton:
            icon: 'movie'
            text: 'Open Dashboard'
            on_release: app.open_img()
        NavigationDrawerIconButton:
            icon: 'bank'
            text: 'Open Studentlist'
            on_release: app.open_lead_list()
    BoxLayout:
        orientation: 'vertical'
        Toolbar:
            id: toolbar
            title: 'Intelligent Teaching Aid'
            md_bg_color: app.theme_cls.primary_color
            background_palette: 'Primary'
            background_hue: '500' 
            left_action_items: [['menu', lambda x: app.root.toggle_nav_drawer()]]
            right_action_items: [['play', lambda x: app.show_snackbar()],['arrow-left',lambda x:app.stop()]]
        ScreenManager:
            id: scr_mngr
            Screen:
                name: 'welcome'
                ScrollView:
                    GridLayout:
                        cols: 2
                        row_default_height: (self.width - self.cols*self.spacing[0])/self.cols
                        row_force_default: True
                        size_hint_y: None
                        height: self.minimum_height
                        padding: dp(4), dp(4)
                        spacing: dp(4)
                        BoxLayout:
                            orientation:'vertical'
                            MDLabel:
                                font_style: 'Display3'
                                theme_text_color: 'Primary'
                                text: "Welcome"
                            MDLabel:
                                font_style: 'Title'
                                theme_text_color: 'Primary'
                                text: 'This is an intelligent teaching aid'
                        SmartTile:
                            mipmap: True
                            source: './assets/welcome.png'
            Screen:
                name:'regis'
                BoxLayout:
                    orientation: 'vertical'
                    MDCheckbox:
                        id: chkbox
                        size_hint: None, None
                        size: dp(48), dp(48)
                        pos_hint: {'center_x': 0.5, 'center_y': 0.4}
                        active: False
                        on_release: app.start_process()
                    MDSpinner:
                        id: spinner
                        size_hint: None, None
                        size: dp(46), dp(46)
                        pos_hint: {'center_x': 0.5, 'center_y': 0.5}
                        active: True if chkbox.active else False
                    MDLabel:
                        id: statuslabel
                        font_style: 'Title'
                        theme_text_color: 'Primary'
                        text: "Tap the checkbox to start detection"
                        halign: 'center'
            Screen:
                name: 'select'
                BoxLayout:
                    orientation: 'vertical'
                    padding: '3dp'
                    MDLabel:
                        font_style: 'Title'
                        text: "Drag below to change the number of people selected"
                    BoxLayout:
                        orientation: 'horizontal'
                        MDSlider:
                            id: num_slider
                            min: 0
                            max: 20
                            value: 0
                        MDLabel:
                            text: str(int(num_slider.value))
                    MDFlatButton:
                        id: start_selection
                        text: 'Tap here to generate name list '
                        on_release: app.random_select()
                    MDLabel
            Screen:
                id: dash_screen
                name: 'studentlist'
                ScrollView:
                    MDList:
                        id: ml
            Screen:
                id: dash
                name: 'dash'
                ScrollView:
                    id: dash
                    
