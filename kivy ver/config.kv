BoxLayout:
    orientation: 'vertical'
    Toolbar:
        title: "Toolbar with right buttons"
        pos_hint: {'center_x': 0.5, 'center_y': 0.5}
        md_bg_color: get_color_from_hex(colors['Amber']['700'])
        background_palette: 'Amber'
        background_hue: '700'
        right_action_items: [['content-copy', lambda x: app.write_config()]]
    ScreenManager:
        id: scr_mngr
        Screen:
            id: scr
            BoxLayout:
                orientation: 'vertical'
                MDLabel:
                    text: 'Open folders on schedule:'
                MDSwitch:
                    id: switch
                    size_hint:    None, None
                    size: dp(36),dp(48)
                    _active: app.load_config()[0]
                MDTextField:
                    id: text
                    hint_text: 'Input tolerence value here'
                    text: app.load_config()[1]